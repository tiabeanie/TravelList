<div class="jumbotron">
  <h1 class="display-3"><%= @destination.name %></h1>
  <p class="lead"><strong>Country:</strong> <a href="/countries/<%= @destination.country.id %>"><%= @destination.country.name %></a></p>
  <% if @destination.user_id == @user.id %>
    <p>From Your List</p>
    <a class="btn btn-info btn-sm" href="/destinations/<%= @destination.id %>/edit" role="button">Edit destination</a>
  <% else %>
    <p>From <%= @user.name %>'s List</p>
    <a class="btn btn-info btm-sm" href="/destinations/<%= @destination.id %>/new_from_user" role="button">Add this to my List</a>
  <% end %>
  <% if @destination.user_id == @user.id %>
      <form method="POST" action="/destinations/<%= @destination.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button type="submit" class="btn btn-danger btn-sm">Delete destination</button>
      </form>
  <% end %>
</div>
<% if @destination.user_id == @user.id %>
  <div class="text-right"><a class="btn btn-success" style="margin: 20px" href="/destinations" role="button">< Back to My Bucket List</a></div>
<% else %>
  <div class="text-right"><a class="btn btn-warning" style="margin: 20px" href="/destinations/users" role="button">< Back to Get Inspiration</a></div>
<% end %>