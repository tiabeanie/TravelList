<h1>Edit to <%= @destination.description %></h1>
<form method="POST" action="/destinations/<%= @destination.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="description">Description *</label>
    <input type="text" class="form-control" id="description" name="description" value="<%= @destination.description %>" required>
  </div>
  <div class="form-group">
    <label for="country">Country *</label><% country = Country.find(@destination.country_id) %>
    <input type="text" class="form-control" id="country" name="country" value="<%= country.name %>" required>
  </div>
</form>